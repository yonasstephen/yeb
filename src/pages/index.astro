---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((p) => p.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Fetch GitHub stars for projects
const starCounts: Record<string, number> = {};
await Promise.all(
  featuredProjects
    .filter((p) => p.data.github)
    .map(async (p) => {
      try {
        const res = await fetch(`https://api.github.com/repos/${p.data.github}`);
        if (res.ok) {
          const data = await res.json();
          starCounts[p.id] = data.stargazers_count;
        }
      } catch {}
    })
);

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});
const recentPosts = allPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<BaseLayout title="Yonas Stephen | Software Engineer">
  <section class="hero container">
    <div class="hero-content">
      <h1 class="hero-name">Yonas Stephen</h1>
      <p class="hero-tagline">Software Engineer</p>
      <p class="hero-bio">
        Building things with Go, JavaScript, and distributed systems.
      </p>
      <div class="hero-links">
        <a href="/projects/" class="hero-link">Projects</a>
        <a href="/blog/" class="hero-link">Blog</a>
      </div>
    </div>
  </section>

  <section class="container section">
    <h2 class="section-title">Experience</h2>
    <ul class="experience-list">
      <li class="experience-item">
        <div class="exp-header">
          <div class="exp-name">
            <a href="https://www.meta.com" target="_blank" rel="noopener noreferrer"><img src="/images/meta-logo.svg" alt="Meta" class="exp-logo meta-logo" /></a>
          </div>
          <span class="exp-date">Jun 2022 - Present</span>
        </div>
        <div class="exp-timeline">
          <div class="timeline-entry">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <p class="exp-role">Software Engineer @ MRS (Modern Recommendation Systems) <span class="exp-role-period">2026 - Present</span></p>
              <p class="timeline-detail">Support teams to optimize GPU usage in training RecSys models</p>
            </div>
          </div>
          <div class="timeline-entry">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <p class="exp-role">Software Engineer @ Insider Trust <span class="exp-role-period">2023 - 2026</span></p>
              <p class="timeline-detail">Build detection and prevent tools to protect Meta's most sensitive data</p>
              <p class="timeline-detail">Developed a ML sensitivity scoring system to classify personal vs business files</p>
              <p class="timeline-detail">Build automation to improve investigator efficiency</p>
            </div>
          </div>
          <div class="timeline-entry">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <p class="exp-role">Software Engineer @ Instagram ML Data Authoring <span class="exp-role-period">2022 - 2023</span></p>
              <p class="timeline-detail">Build ML feature cost monitoring infra</p>
              <p class="timeline-detail">Developed ML serving server cache optimization to save cost</p>
            </div>
          </div>
        </div>
      </li>
      <li class="experience-item">
        <div class="exp-header">
          <div class="exp-name">
            <a href="https://gojek.io" target="_blank" rel="noopener noreferrer"><img src="/images/gojek-logo.svg" alt="Gojek" class="exp-logo" /></a>
          </div>
          <span class="exp-date">Sep 2017 - May 2022</span>
        </div>
        <div class="exp-timeline">
          <div class="timeline-entry">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <p class="exp-role">Senior Software Engineer @ Fraud Platform <span class="exp-role-period">2026 - Present</span></p>
              <p class="timeline-detail">Tech lead for 5 engineers building realtime fraud detection and investigation platform</p>
            </div>
          </div>
        </div>
      </li>
      <li class="experience-item">
        <div class="exp-header">
          <div class="exp-name">
            <h3><a href="https://anacle.com" target="_blank" rel="noopener noreferrer">Anacle Systems</a></h3>
          </div>
          <span class="exp-date">Jul 2014 - Aug 2017</span>
        </div>
        <div class="exp-timeline">
          <div class="timeline-entry">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <p class="exp-role">Software Engineer<span class="exp-role-period">2014 - 2017</span></p>
              <p class="timeline-detail">Led mobile app development for Enterprise Resource Planning (ERP) ecosystem</p>
              <p class="timeline-detail">Led high stake POC mobile and web app to win a record tender project</p>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </section>

  {featuredProjects.length > 0 && (
    <section class="container section">
      <h2 class="section-title">Featured Projects</h2>
      <div class="project-grid">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tags={project.data.tags}
            url={project.data.url}
            slug={project.id}
            stars={starCounts[project.id]}
          />
        ))}
      </div>
    </section>
  )}

  {recentPosts.length > 0 && (
    <section class="container section">
      <h2 class="section-title">Recent Posts</h2>
      <ul class="post-list">
        {recentPosts.map((post) => (
          <li>
            <a href={`/blog/${post.id}/`} class="post-item" transition:name={`blog-${post.id}`}>
              <span class="post-title">{post.data.title}</span>
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </a>
          </li>
        ))}
      </ul>
      <a href="/blog/" class="view-all">View all posts</a>
    </section>
  )}
</BaseLayout>

<style>
  .hero {
    padding: 6rem 1.5rem 4rem;
  }

  .hero-content {
    max-width: var(--max-width-prose);
  }

  .hero-name {
    font-size: 2.5rem;
    margin-bottom: 0.25rem;
    animation: fadeInUp 500ms ease both;
  }

  .hero-tagline {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
    animation: fadeInUp 500ms ease 100ms both;
  }

  .hero-bio {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    animation: fadeInUp 500ms ease 200ms both;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    animation: fadeInUp 500ms ease 300ms both;
  }

  .hero-link {
    padding: 0.5rem 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text);
    font-size: 0.9rem;
    transition:
      background var(--transition-fast),
      border-color var(--transition-fast);
  }

  .hero-link:hover {
    background: var(--color-surface);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .section {
    padding-bottom: 3rem;
  }

  .section-title {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.08em;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .post-list {
    list-style: none;
  }

  .post-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0.75rem 0.5rem;
    border-radius: 6px;
    color: var(--color-text);
    transition: background var(--transition-fast);
  }

  .post-item:hover {
    background: rgba(0, 0, 0, 0.02);
    color: var(--color-text);
  }

  .post-title {
    font-weight: 500;
  }

  .post-item time {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    margin-left: 1rem;
  }

  .view-all {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.9rem;
  }

  .experience-list {
    list-style: none;
  }

  .experience-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .experience-item:last-child {
    border-bottom: none;
  }

  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .exp-name {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .exp-logo {
    height: 20px;
    width: auto;
  }

  .meta-logo {
    height: 16px;
  }

  .exp-header h3 {
    font-size: 1rem;
  }

  .exp-date {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    margin-left: 1rem;
  }

  .exp-timeline {
    margin-top: 0.75rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .exp-timeline::before {
    content: '';
    position: absolute;
    left: 4px;
    top: 8px;
    bottom: 8px;
    width: 1px;
    background: var(--color-border);
  }

  .timeline-entry {
    position: relative;
    padding-bottom: 1.25rem;
  }

  .timeline-entry:last-child {
    padding-bottom: 0;
  }

  .timeline-dot {
    position: absolute;
    left: -1.5rem;
    top: 7px;
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background: var(--color-border);
    z-index: 1;
  }

  .timeline-entry:first-child .timeline-dot {
    background: var(--color-accent);
  }

  .timeline-content {
  }

  .exp-role {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 500;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .exp-role-period {
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--color-text-muted);
    white-space: nowrap;
    margin-left: 1rem;
  }

  .timeline-detail {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-top: 0.2rem;
  }

  @media (max-width: 480px) {
    .hero-name {
      font-size: 2rem;
    }

    .post-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .post-item time {
      margin-left: 0;
    }

    .exp-header {
      flex-direction: column;
    }

    .exp-date {
      margin-left: 0;
    }
  }
</style>
